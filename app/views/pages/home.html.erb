<div class="container-2">
  <div class="form-wrapper">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <h2>Create a new offer here:</h2>

      <%= simple_form_for @product do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :price_in_cents %>
        <%= f.input :quantity_in_kg %>
        <%= f.input :min_quantity_to_order %>
        <%= f.input :available_from %>
        <%= f.input :available_until %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn-flat' %>
      <% end %>
    </div>
  </div>
</div>
</div>


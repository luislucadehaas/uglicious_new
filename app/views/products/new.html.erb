<div class="container-2">
  <div class="form-wrapper">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2>Create a new offer here:</h2>

        <%= simple_form_for(@product) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :price_in_cents, label: 'Price in kg'%>
        <%= f.input :quantity_in_kg %>
        <%= f.input :min_quantity_to_order %>
        <%= f.input :category_id, collection: Category.all %>
          <div class="form-row">
            <div class="col">
              <%= f.input :available_from, as: :string, required: true, input_html: {class: "datepicker"}, placeholder: "click me..."%>
            </div>
            <div class="col">
              <%= f.input :available_until, as: :string, required: true, input_html: {class: "datepicker"}, placeholder: "click me..." %>
            </div>
          </div>

        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.button :submit, "Add a product", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <div class="cards-all">
    <div class="row">
            <% @products.each do |product| %>
      <div class="col-sm-6 col-xs-6 col-md-4 column" >
         <%= link_to product_path(product) do %>
        <div class="card-trip">
          <img src="<%= product.photo%>">
            <div class="card-trip-infos">
              <div>
                <h2 class="wig-title"><%=product.title.truncate(20)%></h2>
              <!-- <p><%=wig.color.truncate(20)%></p> -->
            </div>

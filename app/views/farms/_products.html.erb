  <div class="card-request" style="height:122px;">
    <img style="height:122px;"src="<%= prod.photo %>">
    <div class="card-request-infos">
      <h2><%= prod.title %> - <%= prod.price_in_cents %>â‚¬ per Kg</h2>
      <p><%= prod.description.truncate(100) %></p>
